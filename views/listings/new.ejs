<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Create a new listing</h3>
            <!-- Please Wait Message (Hidden by default) -->
            <div id="pleaseWaitMessage" class="alert alert-info" style="display: none;">
                Please wait a few seconds...
            </div>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"
                id="createListingForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Required feild! Please enater valid title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" type="text" id=""
                        class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Required feild! Please enater valid description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload image</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Required fild! Please upload image</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="1200" class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback"> Required fild! Please enater valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback"> Required feild! Please enater valid country name</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Required feild! Please enater valid locatione</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>
    <script>
        // Show client-side flash message after form submission and before server response
        document.getElementById('createListingForm').addEventListener('submit', function (event) {
            // Prevent the form from submitting while showing the message
            event.preventDefault();

            // Show the "Please wait" message
            document.getElementById('pleaseWaitMessage').style.display = 'block';

            // Submit the form after showing the message
            setTimeout(() => {
                this.submit();  // This will actually submit the form after showing the message
            }, 100);  // Adding a slight delay to ensure the message appears
        });
    </script>